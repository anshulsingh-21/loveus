import turtle

# Set up the screen
screen = turtle.Screen()
screen.bgcolor("black")

# Create a turtle object
pen = turtle.Turtle()
pen.shape("turtle")
pen.speed(10)

# Set up the pen color for drawing
pen.color("red")
pen.begin_fill()

# Drawing the heart shape
pen.left(50)
pen.forward(133)
pen.circle(50, 200)
pen.right(140)
pen.circle(50, 200)
pen.forward(133)

pen.end_fill()

# Write "I love you" inside the heart
pen.penup()
